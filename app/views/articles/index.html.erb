<nav>
    <%= link_to 'home', root_path %>
</nav>
<h1>Lista de artículos</h1>
<nav>
    <%= link_to 'nuevo artículo', new_article_path %>
</nav>
<table>
    <tr>
        <th>Título</th>
        <th>Contenido</th>
        <th></th>
    </tr>

    <% @articles .each do | article | %>
        <tr>
            <td><%= article .title %></td>
            <td><%= article .text %></td>
            <td><%= link_to 'mostrar', article_path( article ) %></td>
        </tr>
    <% end %>
</table>
